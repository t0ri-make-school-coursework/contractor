<form action="/projects/comments" method="post">
    <hr>

    <input type="hidden" value="{{project._id}}" name="projectId">
    <fieldset>
        <legend>Create a Comment</legend>
        <!-- TITLE -->
        <div>
        <div class="form-group">
            <label for="comment-title">Title</label><br>
            <input class="form-control" id="comment-title" type="text" name="title" placeholder="Title" />
        </div>

        <!-- USER -->
        <div class="form-group">
            <label for="comment-user">Display Name</label><br>
            <input class="form-control" id="comment-user" type="text" name="user" placeholder="User" />
        </div>

        <!-- DESCRIPTION -->
        <div class="form-group">
            <label for="comment-content">Description</label><br>
            <textarea class="form-control" id="comment-content" name="content" rows="3" placeholder="Your comment..." /></textarea>
        </div>
    </div>
    </fieldset>

    <!-- BUTTON -->
    <div class="form-group">
        <button class="btn btn-primary" type="submit">Save Comment</button>
    </div>
</form>
